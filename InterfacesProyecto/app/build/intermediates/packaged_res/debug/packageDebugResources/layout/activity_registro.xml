<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroActivity">

    <!-- Flecha de atras -->
    <ImageView
        android:id="@+id/Flecha"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/iconoflechaback"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@android:color/darker_gray" />

<!-- Titulo principal de registro -->
    <TextView
        android:id="@+id/TvH1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrate en PawDate"
        android:textColor="#F37F45"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/Flecha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

<!--  Texto para el número  -->
    <LinearLayout
        android:id="@+id/LLyt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/TvH1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/TvNumero"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="¿Número Telefonico?"
            android:textAlignment="textStart"
            android:textColor="#404040"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

<!-- Para manejar el textview y el input en una sola linea -->
    <LinearLayout
        android:id="@+id/LLyt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/LLyt1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

<!--    Texto a la izquierda    -->
        <TextView
            android:id="@+id/TvPrefijo"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginEnd="50dp"
            android:text="PE +51"
            android:textAlignment="textStart"
            android:textColor="#404040"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <!--  Input para el número telefonico  -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Til1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:boxBackgroundMode="filled"
            app:boxStrokeColor="#404040"
            app:boxStrokeWidth="2dp"
            app:layout_constraintTop_toBottomOf="@+id/LLyt1"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- el input para el telefono -->
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Telefono"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="999 999 999"
                android:inputType="number"
                android:textStyle="bold"
                android:textColor="#404040"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>


    <!--  Texto para el correo  -->
    <LinearLayout
        android:id="@+id/LLyt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/LLyt2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/TvEmail"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="¿Email?"
            android:textAlignment="textStart"
            android:textColor="#404040"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!--  Input para el email  -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/Til2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:boxBackgroundMode="filled"
        app:boxStrokeColor="#404040"
        app:boxStrokeWidth="2dp"
        app:layout_constraintTop_toBottomOf="@+id/LLyt3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- el input para el email -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="correo@dominio.com"
            android:inputType="number"
            android:textStyle="bold"
            android:textColor="#404040"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Logo momentaneo de la aplicación -->
    <ImageView
        android:id="@+id/Logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logopawdate"
        app:tint="@android:color/holo_orange_dark"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/Til2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <!--  Boton siguiente  -->
    <Button
        android:id="@+id/BSiguiente"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:background="@drawable/fondo_degradado"
        android:backgroundTint="@null"
        android:textColor="#ffffff"
        android:text="SIGUIENTE"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/Logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>